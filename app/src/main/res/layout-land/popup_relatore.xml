<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <de.hdodenhof.circleimageview.CircleImageView
        android:id="@+id/image"
        android:layout_width="121dp"
        android:layout_height="104dp"
        android:layout_marginTop="32dp"
        android:contentDescription="TODO"
        android:src="@drawable/relatore"
        app:civ_border_color="@color/primary_green"
        app:civ_border_width="3dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.06"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />


    <TextView
        android:id="@+id/nome"
        android:layout_width="443dp"
        android:layout_height="70dp"
        android:layout_marginTop="-90dp"
        android:hint="@string/nome"
        android:textAlignment="center"
        android:textSize="24sp"
        android:visibility="invisible"
        app:layout_constraintTop_toBottomOf="@+id/image"
        tools:ignore="MissingConstraints"
        tools:layout_editor_absoluteX="204dp" />

    <EditText
        android:id="@+id/email"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="28dp"
        android:hint="@string/email"
        android:textAlignment="center"
        android:textSize="24sp"
        app:layout_constraintTop_toBottomOf="@+id/nome"
        tools:layout_editor_absoluteX="0dp" />

    <LinearLayout
        android:id="@+id/tasti"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center"
        app:layout_constraintTop_toBottomOf="@id/email"
        android:orientation="horizontal" />

    <CheckBox
        android:id="@+id/permesso1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="100dp"
        android:layout_marginTop="8dp"
        android:text="@string/creare_task"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/tasti" />

    <CheckBox
        android:id="@+id/permesso2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/accettare_tesisti"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@id/tasti"
        android:layout_marginTop="15dp"
        android:layout_marginEnd="100dp"
        />

    <CheckBox
        android:id="@+id/permesso3"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="100dp"
        android:layout_marginTop="15dp"
        android:text="@string/modificare_eliminare_task"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/permesso1" />

    <CheckBox
        android:id="@+id/permesso4"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/modificare_tesi"
        app:layout_constraintStart_toStartOf="@id/permesso2"
        app:layout_constraintTop_toBottomOf="@id/permesso1"
        android:layout_marginTop="15dp"
        android:layout_marginEnd="100dp"
        />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/saveButton"
        android:shadowColor="@color/primary_green"
        app:layout_constraintTop_toBottomOf="@id/permesso3"
        android:layout_marginEnd="150dp"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_marginTop="20dp"
        android:text="@string/aggiungi"
        android:visibility="invisible"/>

    <Button
        android:theme="@style/Button.Red"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/cancelButton"
        app:layout_constraintTop_toBottomOf="@id/permesso3"
        android:layout_marginStart="150dp"
        app:layout_constraintStart_toStartOf="parent"
        android:layout_marginTop="20dp"
        android:text="@string/cancella"/>

</androidx.constraintlayout.widget.ConstraintLayout>