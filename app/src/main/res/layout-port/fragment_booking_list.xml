<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_marginTop="?android:attr/actionBarSize"
    tools:context=".ui.bookings.BookingListFragment"
    android:orientation="vertical">


    <com.google.android.material.tabs.TabLayout
        android:id="@+id/tab_layout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:elevation="2dp"
        app:tabGravity="fill"
        app:tabMode="fixed">

        <com.google.android.material.tabs.TabItem
            android:id="@+id/tab_open"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/opened" />

        <com.google.android.material.tabs.TabItem
            android:id="@+id/tab_accepted"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/accepted" />

        <com.google.android.material.tabs.TabItem
            android:id="@+id/tab_refused"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/refused" />

    </com.google.android.material.tabs.TabLayout>

    <androidx.viewpager.widget.ViewPager
        android:id="@+id/view_pager"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="0"
        android:background="@android:color/transparent"
        android:elevation="2dp" />

    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/booking_list_recycler_view"
        android:layout_width="match_parent"
        android:layout_height="627dp"
        android:background="@android:color/white"
        android:backgroundTint="?attr/colorOnPrimary"
        android:divider="@android:color/transparent"
        android:dividerHeight="16dp"
        android:padding="16dp"
        android:scrollbars="vertical" />

    <TextView
        android:id="@+id/text_no_bookings"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginStart="8dp"
        android:layout_marginTop="8dp"
        android:layout_marginEnd="8dp"
        android:text="@string/there_are_no_bookings"
        android:textAlignment="center"
        android:textSize="20sp"
        android:visibility="gone" />
</LinearLayout>