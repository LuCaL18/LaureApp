<?xml version="1.0" encoding="utf-8"?>
<navigation xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/mobile_navigation"
    app:startDestination="@+id/navigation_home">

    <fragment
        android:id="@+id/navigation_home"
        android:name="com.uniba.mobile.cddgl.laureapp.ui.home.HomeFragment"
        tools:layout="@layout/fragment_home" >
        <action
            android:id="@+id/action_navigation_home_to_chatFragment"
            app:destination="@id/chatFragment" />
    </fragment>

    <fragment
        android:id="@+id/navigation_dashboard"
        android:name="com.uniba.mobile.cddgl.laureapp.ui.dashboard.DashboardFragment"
        android:label="@string/title_dashboard"
        tools:layout="@layout/fragment_dashboard" />

    <fragment
        android:id="@+id/navigation_notifications"
        android:name="com.uniba.mobile.cddgl.laureapp.ui.notifications.NotificationsFragment"
        android:label="@string/title_notifications"
        tools:layout="@layout/fragment_notifications" />
    <fragment
        android:id="@+id/nav_gallery"
        android:name="com.uniba.mobile.cddgl.laureapp.ui.gallery.GalleryFragment"
        android:label="@string/menu_gallery"
        tools:layout="@layout/fragment_gallery" />
    <fragment
        android:id="@+id/nav_new_task"
        android:name="com.uniba.mobile.cddgl.laureapp.ui.task.NewTaskFragment"
        android:label="@string/new_task"
        tools:layout="@layout/fragment_new_task" />
    <fragment
        android:id="@+id/nav_lista_task"
        android:name="com.uniba.mobile.cddgl.laureapp.ui.task.ListaTaskFragment"
        android:label="ListaTask" >
    </fragment>
    <fragment
        android:id="@+id/nav_visualizza_task"
        android:name="com.uniba.mobile.cddgl.laureapp.ui.task.VisualizzaTask"
        android:label="VisualizzaTask" >
    </fragment>
    <fragment
        android:id="@+id/nav_lista_tesi"
        android:name="com.uniba.mobile.cddgl.laureapp.ui.tesi.ListaTesiFragment"
        android:label="@string/lista_tesi"
        tools:layout="@layout/fragment_lista_tesi" />
    <fragment
        android:id="@+id/nav_classifica_tesi"
        android:name="com.uniba.mobile.cddgl.laureapp.ui.tesi.ClassificaTesiFragment"
        android:label="@string/classifica_tesi"
        tools:layout="@layout/fragment_classifica_tesi" />
    <fragment
        android:id="@+id/chatFragment"
        android:name="com.uniba.mobile.cddgl.laureapp.ui.chat.ChatFragment"
        android:label="@string/title_chat"
        tools:layout="@layout/fragment_chat" />
    <fragment
        android:id="@+id/chatListFragment"
        android:name="com.uniba.mobile.cddgl.laureapp.ui.chat.ChatListFragment"
        android:label="ChatListFragment" >
        <action
            android:id="@+id/action_chatListFragment_to_chatFragment"
            app:destination="@id/chatFragment" />
    </fragment>
</navigation>