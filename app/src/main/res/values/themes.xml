<resources>
    <!-- Base application theme. -->
    <style name="Theme.LaureApp" parent="Theme.MaterialComponents.DayNight.DarkActionBar">
        <!-- Primary brand color. -->
        <item name="colorPrimary">@color/primary_green</item>
        <item name="colorOnPrimary">@color/white</item>
        <!-- Secondary brand color. -->
        <item name="colorSecondary">@color/message_green</item>
        <item name="colorSecondaryVariant">@color/teal_700</item>
        <item name="colorOnSecondary">@color/grey_app</item>
        <!-- Status bar color. -->
        <item name="android:statusBarColor">?attr/colorPrimary</item>
        <item name="iconTint">@color/grey_app</item>
        <item name="android:colorMultiSelectHighlight">@color/dark_green</item>
        <item name="colorPrimaryInverse">@color/grey_body</item>
        <!-- Customize your theme here. -->
    </style>

    <style name="Theme.LaureApp.NoActionBar">
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
    </style>

    <style name="Theme.LaureApp.AppBarOverlay" parent="ThemeOverlay.AppCompat.Dark.ActionBar" />

    <style name="Theme.LaureApp.PopupOverlay" parent="ThemeOverlay.AppCompat.Light" />

    <style name="Widget.App.MaterialDivider" parent="Widget.MaterialComponents.MaterialDivider">
        <item name="dividerColor">@color/grey_divider</item>
    </style>
</resources>