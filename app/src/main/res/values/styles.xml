        <item name="cornerSize">20dp</item>
        <item name="color">@color/white</item>
    </style>
    <style name="Widget.CalendarView.Custom" parent="android:Widget.CalendarView">
        <item name="android:focusedMonthDateColor">@color/primary_green</item>
