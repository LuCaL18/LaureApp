<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    tools:context="it.uniba.dib.sms222327.laureapp.ui.calendario.CalendarioFragment">

    <TextView
        android:id="@+id/mese"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="50dp"
        android:textSize="25sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <com.github.sundeepk.compactcalendarview.CompactCalendarView
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:id="@+id/compactcalendar_view"
        android:layout_width="fill_parent"
        android:paddingRight="10dp"
        android:paddingLeft="10dp"
        android:layout_height="220dp"
        app:compactCalendarTargetHeight="250dp"
        app:compactCalendarTextSize="12sp"
        app:compactCalendarBackgroundColor="#FFFFFF"
        app:compactCalendarTextColor="#000000"
        app:compactCalendarCurrentSelectedDayBackgroundColor="@color/primary_green"
        app:compactCalendarCurrentDayBackgroundColor="#D308BF7D"
        android:outlineAmbientShadowColor="@color/primary_green"
        app:layout_constraintTop_toBottomOf="@id/mese"
        android:layout_marginTop="5dp"
        tools:ignore="MissingConstraints"
        android:scrollIndicators="bottom"
        android:scrollbars="horizontal"/>
    <ImageView
        android:id="@+id/restart"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:padding="15dp"
        android:src="@drawable/baseline_restart_alt_24"/>

    <Button
        android:id="@+id/addRicevimentoB"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="@string/add"
        app:layout_constraintTop_toBottomOf="@id/compactcalendar_view" />

    <ScrollView
        android:id="@+id/addRicevimentoL"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        app:layout_constraintTop_toBottomOf="@id/addRicevimentoB"
        app:layout_constraintBottom_toBottomOf="parent"
        android:visibility="gone">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <TextView
            android:id="@+id/tesiT"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:text="@string/thesis"
            android:textSize="20sp"
            android:layout_marginHorizontal="50dp"
            />

        <Spinner
            android:id="@+id/tesi"
            android:text="nome tesi"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginHorizontal="50dp"
            android:layout_marginTop="10dp"
            android:textSize="40sp"
            android:entries="@array/tesi_array"
            tools:ignore="TouchTargetSizeCheck,SpeakableTextPresentCheck"/>

        <TextView
            android:id="@+id/taskSelected"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:text="@string/task"
            android:textSize="20sp"
            android:layout_marginHorizontal="50dp"
            android:visibility="gone"
            />

        <ListView
            android:id="@+id/taskList"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:divider="@color/primary_green"
            android:dividerHeight="2dp"
            android:layout_marginHorizontal="50dp"
            android:visibility="gone"
            />

        <TextView
            android:id="@+id/titoloT"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:text="@string/title"
            android:textSize="20sp"
            android:layout_marginHorizontal="50dp"
            />

        <EditText
            android:id="@+id/titolo"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginHorizontal="50dp"
            android:hint="@string/minimum_10_characters"
            android:textSize="20sp"
            android:visibility="visible"/>

        <TextView
            android:id="@+id/riepilogoT"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:text="@string/summary"
            android:textSize="20sp"
            android:layout_marginHorizontal="50dp"
            android:visibility="gone"
            />

        <EditText
            android:id="@+id/riepilogo"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginHorizontal="50dp"
            android:hint="@string/summary"
            android:textSize="20sp"
            android:visibility="gone"/>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

        <Button
            android:id="@+id/orario"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="50dp"
            android:text="@string/choose_time"/>

        <TextView
            android:id="@+id/orarioT"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="50dp"
            android:textSize="25sp"/>

        </LinearLayout>

        <Button
        android:id="@+id/salva"
        android:backgroundTint="@color/grey_app"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:layout_constraintBottom_toBottomOf="parent"
        android:text="@string/save"/>

        </LinearLayout>
    </ScrollView>


</androidx.constraintlayout.widget.ConstraintLayout>