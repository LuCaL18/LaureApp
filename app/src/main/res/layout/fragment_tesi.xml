<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <ScrollView
        android:id="@+id/scrollView3"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toTopOf="parent"
        android:layout_marginTop="40dp">

        <LinearLayout
            android:id="@+id/layout_vert"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">

            <TextView
                android:id="@+id/T_nome_tesi"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/nome_tesi"
                android:textSize="20sp"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="@+id/scrollView3"
                android:layout_marginLeft="20dp"
                android:layout_marginTop="20dp"
                android:textColor="@color/primary_green"
                android:textStyle="bold" />

            <EditText
                android:id="@+id/nome_tesi"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:hint="@string/nome_tesi"
                android:textSize="20sp"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/T_nome_tesi"
                android:layout_marginLeft="20dp"
                android:layout_marginTop="10dp"
                android:textColor="@color/black" />
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:orientation="horizontal">
                    <TextView
                    android:id="@+id/T_relatori_tesi"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/relatori"
                    android:textSize="20sp"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toBottomOf="@+id/nome_tesi"
                    android:layout_marginLeft="20dp"
                    android:layout_marginTop="10dp"
                    android:textColor="@color/primary_green"
                    android:textStyle="bold" />

                    <ImageView
                        android:id= "@+id/aggiungi_relatore"
                        android:layout_width="20dp"
                        android:layout_height="20dp"
                        app:layout_constraintTop_toTopOf="@+id/T_relatori_tesi"
                        android:layout_marginStart="15dp"
                        android:layout_marginTop="12dp"
                        android:background="@drawable/add"
                        android:textAlignment="center"
                        android:clickable="true"
                        android:contextClickable="true"
                        android:allowClickWhenDisabled="true"/>
                </LinearLayout>

            <TextView
                android:id="@+id/relatore_principale"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="sabino di tria"
                android:textSize="20sp"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/T_relatori_tesi"
                android:layout_marginLeft="20dp"
                android:layout_marginTop="10dp"
                android:textColor="@color/black" />
            <LinearLayout
                android:id="@+id/relatori_tesi"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:layout_marginStart="20dp"
                />
            <TextView
                android:id="@+id/T_descrizione"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="DESCRIZIONE"
                android:textSize="20sp"
                app:layout_constraintStart_toStartOf="parent"
                android:layout_marginLeft="20dp"
                android:layout_marginTop="20dp"
                android:textColor="@color/primary_green"
                android:textStyle="bold" />

            <EditText
                android:id="@+id/descrizione"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:hint="Descrizione"
                android:textSize="24sp"
                android:layout_marginLeft="20dp"
                android:layout_marginRight="10dp"
                android:layout_marginTop="10dp"/>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="horizontal">
                <TextView
                    android:id="@+id/T_vincoli"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/vincoli"
                    android:textSize="20sp"
                    app:layout_constraintStart_toStartOf="parent"
                    android:layout_marginLeft="20dp"
                    android:layout_marginTop="10dp"
                    android:textColor="@color/primary_green"
                    android:textStyle="bold" />

                <ImageView
                    android:id= "@+id/aggiungi_vincoli"
                    android:layout_width="20dp"
                    android:layout_height="20dp"
                    app:layout_constraintTop_toTopOf="@+id/T_vincoli"
                    android:layout_marginStart="15dp"
                    android:layout_marginTop="12dp"
                    android:background="@drawable/add"
                    android:clickable="true"
                    android:contextClickable="true"
                    android:allowClickWhenDisabled="true"/>
            </LinearLayout>
            <LinearLayout
                android:id="@+id/vincoli_tesi"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:layout_marginStart="20dp"
                />
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="horizontal">
                <TextView
                    android:id="@+id/T_task"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/task"
                    android:textSize="20sp"
                    app:layout_constraintStart_toStartOf="parent"
                    android:layout_marginLeft="20dp"
                    android:layout_marginTop="10dp"
                    android:textColor="@color/primary_green"
                    android:textStyle="bold" />

                <ImageView
                    android:id= "@+id/aggiungi_task"
                    android:layout_width="20dp"
                    android:layout_height="20dp"
                    android:layout_marginStart="15dp"
                    app:layout_constraintTop_toTopOf="@+id/T_task"
                    android:layout_marginTop="12dp"
                    android:background="@drawable/add"
                    android:clickable="true"
                    android:contextClickable="true"
                    android:allowClickWhenDisabled="true"/>
            </LinearLayout>
        </LinearLayout>
    </ScrollView>

    <Button
        android:id="@+id/salva"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_marginBottom="15dp"
        android:layout_marginRight="15dp"
        android:text="SALVA"/>

</androidx.constraintlayout.widget.ConstraintLayout>