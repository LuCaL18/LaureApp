<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <ScrollView
        android:id="@+id/scrollView3"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        app:layout_constraintTop_toTopOf="parent"
        android:layout_marginTop="40dp">

        <LinearLayout
            android:id="@+id/layout_vert"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center_horizontal">

                <ImageView
                    android:id="@+id/tesi_image_view"
                    android:layout_width="150dp"
                    android:layout_height="150dp"
                    android:layout_gravity="center_horizontal"
                    app:srcCompat="@mipmap/no_image" />

                <com.google.android.material.floatingactionbutton.FloatingActionButton
                    android:id="@+id/upload_image_button"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignEnd="@id/tesi_image_view"
                    android:layout_alignBottom="@id/tesi_image_view"
                    android:layout_marginEnd="2dp"
                    android:layout_marginBottom="2dp"
                    android:src="@drawable/baseline_add_to_photos_24"
                    app:tint="@color/white"
                    android:tint="@color/white"
                    app:backgroundTint="?attr/colorPrimary"/>
            </RelativeLayout>

            <EditText
                android:id="@+id/nome_tesi"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="15dp"
                android:layout_marginHorizontal="15dp"
                android:hint="@string/thesis_name"
                android:textColor="@color/black"
                android:textSize="20sp" />

            <EditText
                android:id="@+id/descrizione"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:hint="@string/invalid_description"
                android:textSize="20sp"
                android:layout_marginHorizontal="15dp"
                android:layout_marginTop="15dp"
                android:maxLength="200" />

            <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:orientation="horizontal">
                    <TextView
                    android:id="@+id/T_relatori_tesi"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/relators"
                    android:textSize="20sp"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toBottomOf="@+id/nome_tesi"
                    android:layout_marginLeft="20dp"
                    android:layout_marginTop="15dp"
                    android:textColor="@color/primary_green"
                    android:textStyle="bold" />

                    <ImageView
                        android:id= "@+id/aggiungi_relatore"
                        android:layout_width="20dp"
                        android:layout_height="20dp"
                        app:layout_constraintTop_toTopOf="@+id/T_relatori_tesi"
                        android:layout_marginStart="15dp"
                        android:layout_marginTop="17dp"
                        android:textAlignment="center"
                        android:background="@drawable/baseline_add_to_photos_24"
                        android:clickable="true"
                        android:contextClickable="true"
                        android:allowClickWhenDisabled="true"/>
                </LinearLayout>

            <TextView
                android:id="@+id/relatore_principale"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text=""
                android:textSize="20sp"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/T_relatori_tesi"
                android:layout_marginLeft="20dp"
                android:layout_marginTop="15dp"
                android:textColor="@color/black" />
            <androidx.recyclerview.widget.RecyclerView
                android:id="@+id/listaRelatori"
                android:layout_height="wrap_content"
                android:layout_width="380dp"
                android:layout_gravity="center_horizontal"
                />
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="horizontal">
                <TextView
                    android:id="@+id/T_ambito"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/scope"
                    android:textSize="20sp"
                    app:layout_constraintStart_toStartOf="parent"
                    android:layout_marginLeft="20dp"
                    android:layout_marginTop="15dp"
                    android:textColor="@color/primary_green"
                    android:textStyle="bold" />

                <ImageView
                    android:id= "@+id/aggiungi_ambiti"
                    android:layout_width="20dp"
                    android:layout_height="20dp"
                    app:layout_constraintTop_toTopOf="@+id/T_vincoli"
                    android:layout_marginStart="15dp"
                    android:layout_marginTop="17dp"
                    android:background="@drawable/baseline_add_to_photos_24"
                    android:clickable="true"
                    android:contextClickable="true"
                    android:allowClickWhenDisabled="true"/>
            </LinearLayout>

            <LinearLayout
                android:id="@+id/ambiti_tesi"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:layout_marginStart="20dp"
                />
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="horizontal">
                <TextView
                    android:id="@+id/T_vincoli"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/constraints"
                    android:textSize="20sp"
                    app:layout_constraintStart_toStartOf="parent"
                    android:layout_marginLeft="20dp"
                    android:layout_marginTop="15dp"
                    android:textColor="@color/primary_green"
                    android:textStyle="bold" />

                <ImageView
                    android:id= "@+id/aggiungi_vincoli"
                    android:layout_width="20dp"
                    android:layout_height="20dp"
                    app:layout_constraintTop_toTopOf="@+id/T_vincoli"
                    android:layout_marginStart="15dp"
                    android:layout_marginTop="17dp"
                    android:background="@drawable/baseline_add_to_photos_24"
                    android:clickable="true"
                    android:contextClickable="true"
                    android:allowClickWhenDisabled="true"/>
            </LinearLayout>
            <LinearLayout
                android:id="@+id/vincoli_tesi"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:layout_marginStart="20dp"
                />
            <EditText
                android:id="@+id/note"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:hint="@string/notes"
                android:textSize="24sp"
                android:layout_marginHorizontal="15dp"
                android:layout_marginTop="15dp"/>

            <Button
                android:id="@+id/salva"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                android:layout_marginBottom="15dp"
                android:layout_marginEnd="15dp"
                android:layout_marginStart="15dp"
                android:text="@string/save"/>
        </LinearLayout>
    </ScrollView>

</androidx.constraintlayout.widget.ConstraintLayout>