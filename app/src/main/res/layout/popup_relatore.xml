<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:padding="16dp"
    android:orientation="vertical">


    <de.hdodenhof.circleimageview.CircleImageView
        android:id="@+id/image"
        android:layout_width="200dp"
        android:layout_height="200dp"
        android:src="@mipmap/ic_user_round"
        android:layout_marginTop="20dp"
        app:civ_border_color="@color/primary_green"
        app:civ_border_width="3dp"
        android:layout_gravity="center"/>

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/nome"
        android:textSize="24sp"
        android:layout_marginTop="15dp"
        android:textAlignment="center"
        android:visibility="gone"/>


    <EditText
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/email"
        android:textSize="24sp"
        android:layout_marginTop="15dp"
        android:hint="@string/email"
        android:textAlignment="center"/>

    <Button
        android:id="@+id/verify_button_email"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textSize="20sp"
        android:text="@string/verify_email"
        android:layout_marginTop="10dp"/>

    <Button
        android:id="@+id/edit_button_email"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textSize="20sp"
        android:text="@string/change_email"
        android:layout_marginTop="10dp"
        android:visibility="gone"/>

    <LinearLayout
        android:id="@+id/tasti"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_marginTop="20dp">

        <CheckBox
            android:id="@+id/edit_search_keys_permission"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/edit_search_keys"
            android:layout_weight="1"
            />

        <CheckBox
            android:id="@+id/edit_documents_permission"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/edit_documents"
            android:layout_weight="1"
            />

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_marginTop="20dp">

        <CheckBox
            android:id="@+id/edit_constraints_permission"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/edit_constraints"
            android:layout_weight="1"
            />

        <CheckBox
            android:id="@+id/edit_notes_permission"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/edit_notes"
            android:layout_weight="1"
            />
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_marginTop="30dp">

        <Button
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/cancelButton"
            android:layout_marginEnd="20dp"
            android:text="@string/cancel"
            android:layout_weight="1"/>

        <Button
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/saveButton"
            android:shadowColor="@color/primary_green"
            android:layout_marginStart="20dp"
            android:text="@string/aggiungi"
            android:layout_weight="1"
            android:visibility="invisible"/>

    </LinearLayout>



</LinearLayout>