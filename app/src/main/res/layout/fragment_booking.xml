<?xml version="1.0" encoding="utf-8"?>

<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_marginTop="?android:attr/actionBarSize">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <TextView
            android:id="@+id/text_title_booking"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:padding="16dp"
            android:textSize="18sp"
            android:textStyle="bold" />

        <com.google.android.material.divider.MaterialDivider
            android:id="@+id/divider_title_booking"
            style="@style/Widget.App.MaterialDivider"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" />

        <TextView
            android:id="@+id/text_view_recipient_email"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:padding="16dp"
            android:textSize="16sp" />

        <com.google.android.material.divider.MaterialDivider
            android:id="@+id/divider_email_booking"
            style="@style/Widget.App.MaterialDivider"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" />

        <TextView
            android:id="@+id/text_view_full_name_student"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:padding="16dp"
            android:textSize="16sp" />

        <com.google.android.material.divider.MaterialDivider
            android:id="@+id/divider_full_name_student"
            style="@style/Widget.App.MaterialDivider"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" />

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="16dp"
            android:layout_marginTop="16dp"
            android:text="@string/constraints"
            android:textSize="18sp"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/timeline_booking"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:drawablePadding="16dp"
            android:padding="16dp"
            android:text="@string/timelines"
            app:drawableLeftCompat="@drawable/ic_baseline_check_circle_outline_24" />

        <TextView
            android:id="@+id/votes_booking"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:drawablePadding="16dp"
            android:padding="16dp"
            android:text="@string/average_votes"
            app:drawableLeftCompat="@drawable/ic_baseline_check_circle_outline_24" />

        <TextView
            android:id="@+id/exam_booking"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:drawablePadding="16dp"
            android:padding="16dp"
            android:text="@string/necessary_exams"
            app:drawableLeftCompat="@drawable/ic_baseline_check_circle_outline_24" />

        <TextView
            android:id="@+id/skill_booking"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:drawablePadding="16dp"
            android:padding="16dp"
            android:text="@string/skills_and_competences"
            app:drawableLeftCompat="@drawable/ic_baseline_cancel_24" />

        <TextView
            android:id="@+id/justification_constraints_booking_title"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="16dp"
            android:layout_marginTop="16dp"
            android:text="@string/reasons_for_unfulfilled_constraints"
            android:textSize="18sp"
            android:textStyle="bold"
            android:visibility="gone" />

        <TextView
            android:id="@+id/justification_constraints_booking"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:padding="16dp"
            android:text="@string/write_here_your_motivation"
            android:textSize="16sp"
            android:visibility="gone" />

        <TextView
            android:id="@+id/result_booking"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="20dp"
            android:gravity="center"
            android:padding="16dp"
            android:text="@string/you_have_refused_this_booking"
            android:textSize="16sp"
            android:visibility="gone" />

        <LinearLayout
            android:id="@+id/buttons_response_booking"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="30dp"
            android:gravity="end"
            android:orientation="horizontal"
            android:visibility="gone">

            <Button
                android:id="@+id/reject_booking"
                android:layout_width="150dp"
                android:layout_height="wrap_content"
                android:layout_gravity="start"
                android:layout_marginEnd="10dp"
                android:text="@string/reject"
                app:backgroundTint="@color/design_default_color_error"
                app:icon="@drawable/ic_baseline_cancel_24" />

            <Button
                android:id="@+id/accept_booking"
                android:layout_width="150dp"
                android:layout_height="wrap_content"
                android:layout_marginStart="16dp"
                android:layout_marginEnd="16dp"
                android:text="@string/accept"
                app:icon="@drawable/ic_baseline_check_circle_24" />
        </LinearLayout>

    </LinearLayout>
</ScrollView>